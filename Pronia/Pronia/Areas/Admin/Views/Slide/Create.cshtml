@model CreateSlideVM
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Slide</h4>
            
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Name">
                    <span class="text-danger fs-6 fst-italic" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Subname">Subname</label>
                    <input asp-for="Subname" class="form-control" placeholder="Subname">
                    <span class="text-danger fs-6 fst-italic" asp-validation-for="Subname"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <input asp-for="Description" class="form-control" placeholder="Description">
                    <span class ="text-danger fs-6 fst-italic" asp-validation-for="Description"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Order">Order</label>
                    <input asp-for="Order" class="form-control" placeholder="Order">
                    <span asp-validation-for="Order"></span>

                </div>
                <div class="form-group">
                    <label asp-for="File">Photo</label>
                    <input asp-for="File" class="form-control" placeholder="Upload Photo">
                    <span class="text-danger fs-6 fst-italic" asp-validation-for="File"></span>

                </div>
                
                
                
                
                @* <div class="form-group">
                    <label for="exampleTextarea1">Textarea</label>
                    <textarea class="form-control" id="exampleTextarea1" rows="4"></textarea>
                </div> *@
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button asp-action="Index" asp-controller="Slide" class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>