@model Slide
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title">Update slide</h1>
                        <form class="forms-sample" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <img src="~/assets/images/website-images/@Model.Img" />
                            </div>

                            <div class="form-group">
                                <label asp-for="File">File</label>
                                <input asp-for="File" class="form-control" placeholder="File">
                                <span class="text-danger" asp-validation-for="File"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Name">Name</label>
                                <input asp-for="Name" class="form-control" placeholder="Name">
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Subname">Subname</label>
                                <input asp-for="Subname" class="form-control" placeholder="Subname">
                                <span class="text-danger" asp-validation-for="Subname"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Order">Order</label>
                                <input asp-for="Order" class="form-control" placeholder="Order">
                                <span class="text-danger" asp-validation-for="Order"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description">Description</label>
                                <input asp-for="Description" class="form-control" placeholder="Description">
                                <span class="text-danger" asp-validation-for="Description"></span>
                            </div>
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button asp-action="Index" asp-controller="Slide" class="btn btn-danger">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

