@model Category
<div class="d-flex justify-content-center">
<p  class="btn btn-dark btn-lg ">@Model.Name <br><br> Product Count: @Model.Products.Count()</p>
</div>
<div class="product-box d-flex justify-content-evenly flex-wrap align-content-around">

    @foreach (var item in Model.Products)
    {
        <div class="card" style="width: 18rem;">
            <img src="~/assets/images/website-images/@item.ProductImages.FirstOrDefault(x=>x.IsPrimary==true).Url" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">Description: @item.Description</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">SKU: @item.SKU</li>
                <li class="list-group-item">
                    Tags: 
                    @foreach (var tag in item.ProductTags)
                    {
                        <a>@tag.Tag.Name</a>
                    }
                </li>
                <li class="list-group-item">$@item.Price</li>
            </ul>
            <div class="card-body">
                <a asp-area="" asp-controller="Product" asp-action="Details" asp-route-id="@item.Id" class="card-link btn btn-dark btn-lg">Product page</a>
            </div>
        </div>
    }
    


</div>
