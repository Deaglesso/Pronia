@model LoginVM
@{

}
<main class="main-content">
    <div class="d-flex justify-content-center">
        <h2 class="breadcrumb-heading">Login Page</h2>

    </div>

    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row justify-content-center">

                <div class="col-lg-6 pt-5 pt-lg-0">
                    <form method="post">
                        <div class="login-form">
                            <h4 class="login-title">Login</h4>
                            <div class="row">
                                


                                <div class="col-md-12">
                                    <label asp-for="UsernameorEmail">Username & Email</label>
                                    <input asp-for="UsernameorEmail" placeholder="Username & Email">
                                    <span asp-validation-for="UsernameorEmail"></span>

                                </div>




                                <div class="col-md-12">
                                    <label asp-for="Password">Password</label>
                                    <input asp-for="Password" placeholder="Password">
                                    <span asp-validation-for="Password"></span>

                                </div>
                                <div class="col-md-12 d-flex justify-content-end">
                                    <label style="margin-right:3px;" asp-for="isRemembered">Remember me</label>
                                    <input asp-for="isRemembered">

                                </div>
                                <div asp-validation-summary="ModelOnly">
                                </div>

                                <div class="col-6">
                                    <button class="btn btn-custom-size lg-size btn-pronia-primary">
                                        Login
                                    </button>
                                </div>
                                <div class="col-6 text-end">
                                    <a asp-action="Register" asp-controller="Account" class="btn btn-custom-size lg-size btn-pronia-secondary">
                                        Register
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>