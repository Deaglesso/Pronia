@model RegisterVM
@{
    
}
<main class="main-content">
    <div class="d-flex justify-content-center">
    <h2 class="breadcrumb-heading">Register Page</h2>

    </div>

    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row justify-content-center">
                
                <div class="col-lg-6 pt-5 pt-lg-0">
                    <form method="post">
                        <div class="login-form">
                            <h4 class="login-title">Register</h4>
                            <div class="row">
                                <div asp-validation-summary="ModelOnly">

                                </div>
                                <div class="col-md-6 col-12">
                                    <label asp-for="Name">Name</label>
                                    <input asp-for="Name" placeholder="First Name">
                                    <span asp-validation-for="Name"></span>
                                </div>
                                <div class="col-md-6 col-12">
                                    <label asp-for="Surname">Surname</label>
                                    <input asp-for="Surname" placeholder="Last Name">
                                    <span asp-validation-for="Surname"></span>

                                </div>
                                <div class="col-md-12">
                                    <label asp-for="Username">Username</label>
                                    <input asp-for="Username" placeholder="Username">
                                    <span asp-validation-for="Username"></span>

                                </div>
                                <div class="col-md-12">
                                    <label asp-for="Email">Email Address*</label>
                                    <input asp-for="Email" placeholder="Email Address">
                                    <span asp-validation-for="Email"></span>

                                </div>
                                <div class="col-md-12">
                                    <label asp-for="Gender">Gender</label>
                                    <div class="d-flex justify-content-evenly">
                                        <input asp-for="Gender" type="radio" value="Male" id="genderMale" />
                                        <label for="genderMale">Male</label>

                                        <input asp-for="Gender" type="radio" value="Female" id="genderFemale" />
                                        <label for="genderFemale">Female</label>

                                        <input asp-for="Gender" type="radio" value="Other" id="genderOther" />
                                        <label for="genderOther">Other</label>
                                    </div>

                                    <span asp-validation-for="Gender"></span>

                                </div>
                                

                                <div class="col-md-6">
                                    <label asp-for="Password">Password</label>
                                    <input asp-for="Password" placeholder="Password">
                                    <span asp-validation-for="Password"></span>

                                </div>
                                <div class="col-md-6">
                                    <label asp-for="ConfirmPassword">Confirm Password</label>
                                    <input asp-for="ConfirmPassword" placeholder="Confirm Password">
                                    <span asp-validation-for="ConfirmPassword"></span>

                                </div>

                                <div class="col-12">
                                    <button class="btn btn-custom-size lg-size btn-pronia-primary">
                                        Register
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>